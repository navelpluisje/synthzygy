{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "ESNext",
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@modules/*": ["./src/modules/*"],
      "@nodes/*": ["./src/nodes/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@utilities/*": ["./src/utilities/*"],
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": ["node_modules"],
}